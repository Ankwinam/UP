<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333232">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:id="@+id/signup_top"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:background="#333232" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       이름      "
                android:id="@+id/signup_name"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textIsSelectable="false" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup_nameinput"
                android:layout_weight="1"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      이메일     "
                android:id="@+id/signup_email"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:singleLine="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup_emailinput"
                android:layout_weight="1"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     비밀번호   "
                android:id="@+id/signup_pw"
                android:password="false"
                android:textSize="15dp"
                android:textIsSelectable="false"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup_pwinput"
                android:layout_weight="1"
                android:password="true"
                android:textColor="#ffffff" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:id="@+id/signup_repw"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:singleLine="false" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup_repwinput"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:password="true" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="100dp"
            android:paddingRight="90dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입"
                android:id="@+id/write_finish"
                android:textSize="13dp"
                android:background="@drawable/round_button_main"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:id="@+id/signup_btncancel"
                android:textSize="13dp"
                android:onClick="onClick"
                android:background="@drawable/round_button_main"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="방방곡곡"
            android:id="@+id/bangbang_signup"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:paddingTop="0dp"
            android:paddingBottom="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPUP"
            android:id="@+id/upup_signup"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>